<!DOCTYPE html>
<html lang="en">

<head>
  <title><%= title %></title>
  <link rel="stylesheet" href="../../css/bootstrap.min.css" />
  <link href="../../stylesheets/navbar.css" rel="stylesheet">
  <%- include('./partials/head.ejs') %>
</head>

<body class="position-relative" data-bs-spy="scroll">
  <%- include('./partials/navbar.ejs') %>
    <section class="container">
      <h1 class="heading"><%= heading %></h1>
      <div class="float-end mb-3">
        <button class="btn btn-primary shadow-lg" onclick="addItem()"><i class="bi bi-plus-circle"></i> Add item</button>
        <button class="btn btn-warning shadow-lg" onclick=""><i class="bi bi-arrow-clockwise"></i> Refresh</button>
      </div>
      <table class="table table-striped table-bordered shadow-lg" id="table">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Image</th>
            <th scope="col">Product</th>
            <th scope="col">Description</th>
            <th scope="col">In stock</th>
            <th scope="col">Price</th>
            <th scope="col">Options</th>
          </tr>
        </thead>
        <tbody>
<!-- !IMPORTANT - Remove this code when the application is published -->
<% parts.forEach((part) => { %>
  <tr >
    <td><%= part.id %></td>
      <td ><img src=<%= part.image %> width="20%"> </td>
      <td><%= part.product %></td>
      <td><%= part.description %></td>
      <td>Update if the qty is 0</td>
      <td><%= part.price %></td>
      <td><button class="btn btn-danger" onclick="editItem()"> Edit</button></td>
  </tr>
<% }); %>

