            <th scope="row">
            </th>
            <td>
            </td>
            <td>
            </td>
            <td>
            </td>
          </tr> -->
        </tbody>
      </table>

    </section>
    <%- include('./partials/scripts.ejs') %>
    <script src="/js/parts.js"></script>
</body>

</html>